        <div class="items-navi d-flex flex-column justify-content-between shadow-lg" style="padding-left: 0.6rem ">
            <div class="Icon-item ">
                <a href="@Url.Action("Index", "Profile")">
                    <i class="menu-icon fa-solid fa-user"></i>
                    <p class=" icon-text">Cá nhân</p>
                </a>
            </div>
            <div class="Icon-item ">
                <a href="@Url.Action("Index", "Menu")">
                    <i class="menu-icon fa-solid fa-cart-shopping" style="padding-left:5px "></i>
                    <p class=" icon-text">Thực đơn</p>
                </a>
            </div>
            <div class="Icon-item ">
                <a href="@Url.Action("Index", "History")">
                    <i class="menu-icon fa-solid fa-bell"></i>
                    <p class=" icon-text">Lịch sử</p>
                </a>
            </div>

        </div>
        <partial name="LoginLinks"/>
    </div>

    <div class="item-body  container-fluid shadow-lg mt-3" style="width: 87vw;padding:0; height: 95vh">
