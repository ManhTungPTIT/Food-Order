@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Http.Extensions
@using System.Security.Claims
@inject SignInManager<IdentityUser> SignInManager
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
        rel="stylesheet"/>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/Admin.css"/>
</head>
<body>
<div class="Tabs">
    <div class="Title d-flex flex-row px-5">
        <p class="fs-4">@User.Identity!.Name</p>
        <a asp-action="Logout" asp-controller="Authen" class="fs-4">Log out</a>
    </div>
    <div class="tab-item active d-flex flex-row align-items-center justify-content-around">
        <i class="tab-icon fa-solid fa-utensils child"></i>
        <p class="child" asp-action="ListProduct" asp-controller="Product">Product</p>
    </div>
    <div class="tab-item active d-flex flex-row align-items-center justify-content-around">
        <i class="tab-icon fa-solid fa-book-open child"></i>
        <p class="child" asp-action="Index" asp-controller="Category">Category</p>
    </div>
    <div class="tab-item active d-flex flex-row align-items-center justify-content-around">
        <i class="fa-solid fa-cart-shopping child me-2"></i>
        <p class="child" asp-action="Index" asp-controller="Order" style="margin-right: 2rem">Order</p>
    </div>


</div> 
<div class="Contents">
    @RenderBody()
</div>
<script src = "/js/order.js"></script>
</body>
</html>